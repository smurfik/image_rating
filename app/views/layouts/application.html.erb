<!DOCTYPE html>
<html>
<head>
  <title>Image Rating</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <% if !current_user %>
          <%= link_to image_tag("camera.png", class: "navbar-brand"), root_path %>
        <% else %>
          <%= link_to image_tag("camera.png", class: "navbar-brand"), photos_path %>
        <% end %>
      </div>

      <div class="navbar-right">
        <ul class="nav navbar-nav">
          <% if current_user %>
            <li><%= link_to "Add Photo", new_photo_path, class: "navbar-brand" %></li>
            <li><%= link_to "Review Photo", review_path, class: "navbar-brand" %></li>
            <li><%= link_to "Ranked Photos", ranked_path, class: "navbar-brand" %></li>
            <li><%= link_to "Sign Out", sign_out_path, class: "navbar-brand" %></li>
          <% else %>
            <li><%= link_to "Sign In", sign_in_path, class: "navbar-brand signin" %></li>
            <li><%= link_to "Sign Up", sign_up_path, class: "navbar-brand signup" %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </nav>

  <% if flash[:notice] %>
    <div class="col-lg-6 col-lg-offset-3 text-center alert alert-info">
      <%= flash[:notice] %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
