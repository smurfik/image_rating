<div class="container">

  <div class="row">
    <h1 class="col-lg-6 col-lg-offset-3 text-center">Sign Up</h1>
  </div>

  <% if @user %>
    <ul class="list-unstyled">
      <% @user.errors.each do |column, error_message| %>
        <div class="row">
          <li class="col-lg-6 col-lg-offset-3 text-center alert alert-danger"><%= column %> <%= error_message %></li>
        </div>
      <% end %>
    </ul>
  <% end %>

  <%= form_tag sign_up_path, class: "form-horizontal" do %>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag "username" %>
      </div>
      <%= text_field_tag "user[username]", nil, class: "col-lg-2", placeholder: "username" %>
    </div>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag "e-mail" %>
      </div>
      <%= text_field_tag "user[email]", nil, class: "col-lg-2", placeholder: "user@example.com" %>
    </div>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag :password %>
      </div>
      <%= password_field_tag "user[password]", nil, class: "col-lg-2", placeholder: "password" %>
    </div>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag "confirm your password" %>
      </div>
      <%= password_field_tag "user[password_confirmation]", nil, class: "col-lg-2", placeholder: "password" %>
    </div>
    <div class="col-lg-2 col-lg-offset-5">
      <%= submit_tag "Sign Up", class: "btn btn-block btn-success" %>
    </div>
  <% end %>

</div>
