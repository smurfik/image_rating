<div class="container">

  <div class="row">
    <h1 class="col-lg-6 col-lg-offset-3 text-center">Sign In</h1>
  </div>

  <%= form_tag sign_in_path, class: "form-horizontal" do %>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag :username %>
      </div>
      <%= text_field_tag :username, nil, class: "col-lg-2", placeholder: "username" %>
    </div>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag :password %>
      </div>
      <%= password_field_tag :password, nil, class: "col-lg-2", placeholder: "password" %>
    </div>
    <div class="col-lg-2 col-lg-offset-5">
      <%= submit_tag "Sign In", class: "btn btn-block btn-success" %>
    </div>
  <% end %>

</div>
