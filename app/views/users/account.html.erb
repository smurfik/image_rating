<div class="container">
<h1 class="home text-center"></h1>

  <%= render "error_messages", object: @user %>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="jumbotron">
        <h1 class="text-center"><%= gravatar_for(current_user.email) %></h1>
        <h2 class="text-center"><%= current_user.username.capitalize %></h2>
        <h3 class="text-center"><%= current_user.email %></h3>

        <%= form_tag update_email_path, method: "PATCH", class: "form-inline" do %>
          <div class="form-group clear col-sm-offset-2">
            <%= text_field_tag "user[email]", @user.email, placeholder: "user@example.com" %>
            <%= submit_tag "Update email", class: "btn btn-success" %>
          </div>
        <% end %>

        <%= form_tag account_path, method: "PATCH", class: "form-inline" do %>
          <% if current_user.notification %>
            <div class="form-group clear col-sm-offset-1">
              <%= label_tag "Don't want to receive any more emails?" %>
              <%= submit_tag "Unsubscribe", class: "btn" %>
            </div>
          <% else %>
            <div class="form-group clear col-sm-offset-1">
              <%= label_tag "Would you like to receive updates?" %>
              <%= submit_tag "Get Notifications", class: "btn" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>
